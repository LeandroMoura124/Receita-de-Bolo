<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EAF863"
    tools:context=".Segundatela">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="72dp"
        android:layout_marginLeft="72dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="55dp"
        android:layout_marginRight="55dp"
        android:fontFamily="@font/aclonica"
        android:foregroundGravity="center"
        android:text="Bolos"
        android:textColor="#393226"
        android:textSize="27sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.037"
        app:layout_constraintStart_toEndOf="@+id/seta1"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/seta1"
        android:layout_width="77dp"
        android:layout_height="43dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="12dp"
        android:foregroundGravity="left"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="?attr/actionModeCloseDrawable" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="175dp"
        android:layout_height="107dp"
        android:layout_marginTop="44dp"
        android:text="Bolo de Cenoura. Clique na imagem para ver os ingredientes e modo de preparo deste bolo delicioso."
        android:textColor="#F6354F"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.957"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="175dp"
        android:layout_height="107dp"
        android:layout_marginTop="284dp"
        android:text="Bolo de Fubá. Clique na imagem para ver os ingredientes e modo de preparo deste bolo delicioso."
        android:textColor="#F6354F"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.957"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="175dp"
        android:layout_height="107dp"
        android:layout_marginTop="160dp"
        android:text="Bolo de Milho. Clique na imagem para ver os ingredientes e modo de preparo deste bolo delicioso."
        android:textColor="#F6354F"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.957"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <Button
        android:id="@+id/Informacoes"
        android:layout_width="223dp"
        android:layout_height="49dp"
        android:layout_marginTop="452dp"
        android:fontFamily="monospace"
        android:text="Mais informações"
        android:textColor="#CD0E0E"
        app:backgroundTint="#393226"
        app:icon="@drawable/direita"
        app:iconGravity="end|textStart"
        app:iconSize="11dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.924"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/ImgCenoura"
        android:layout_width="132dp"
        android:layout_height="89dp"
        android:layout_marginTop="44dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.125"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5"
        app:srcCompat="@drawable/bolo2" />

    <ImageView
        android:id="@+id/ImgMil"
        android:layout_width="126dp"
        android:layout_height="95dp"
        android:layout_marginTop="160dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.134"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5"
        app:srcCompat="@drawable/bolo1" />

    <ImageView
        android:id="@+id/imgFuba"
        android:layout_width="128dp"
        android:layout_height="102dp"
        android:layout_marginTop="284dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.125"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5"
        app:srcCompat="@drawable/bolof" />

</androidx.constraintlayout.widget.ConstraintLayout>